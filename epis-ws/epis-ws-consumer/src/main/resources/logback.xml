<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%method] - %msg%n</Pattern>
    </layout>
  </appender>
  
  <!--Daily rolling file appender -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>INFO</level>
    </filter>
    
    <File>logs/logFile.log</File>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <FileNamePattern>logs/${job.id}/logFile.%d{yyyy-MM-dd}.log</FileNamePattern>
    </rollingPolicy>
    
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} [%method] - %msg%n</Pattern>
    </layout>
  </appender>
   
  <logger name="org.epis.ws.agent" level="DEBUG" additivity="false">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE"/>
  </logger>
  
  <!-- 
  <logger name="org.apache.cxf" level="INFO" additivity="false">
    <appender-ref ref="STDOUT" />
  </logger>
    -->
 
  <root level="WARN">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
